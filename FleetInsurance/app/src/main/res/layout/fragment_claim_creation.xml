<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="faucher.paul.fleetinsurance.ClaimCreator"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1"
    android:paddingTop="5dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FirstNameLabel"
            android:layout_weight="1"
            android:text="@string/FirstName"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="@color/titleFontColor"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/LastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LastNameLabel"
            android:layout_weight="1"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="normal|bold"
            android:textColor="@color/titleFontColor" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/FirstNameValue"
            android:text="@string/PlaceHolder"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/fontColor"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/LastNameValue"
            android:text="@string/PlaceHolder"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/fontColor"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateLabel"
            android:textSize="@dimen/TitleTextSize"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@color/titleFontColor" />

        <TextView
            android:text="@string/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TimeLabel"
            android:textSize="@dimen/TitleTextSize"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@color/titleFontColor" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateValue"
            android:hint="@string/SelectDateHint"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/placeholderFontColor"
            android:text="@string/PlaceHolder"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CalendarButton"
            app:srcCompat="@drawable/ic_insert_invitation_black_24dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TimeValue"
            android:hint="@string/SelectTimeHint"
            android:textSize="@dimen/TextSize"
            android:text="@string/PlaceHolder"
            android:textColor="@color/placeholderFontColor"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ClockButton"
            app:srcCompat="@drawable/ic_alarm_black_24dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp" />

    </LinearLayout>

    <TextView
        android:text="@string/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DescriptionLabel"
        android:textSize="@dimen/TitleTextSize"
        android:textStyle="normal|bold"
        android:textColor="@color/titleFontColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/DescriptionValue"
        android:textSize="@dimen/TextSize"
        android:paddingBottom="10dp"
        android:maxLength="255" />

    <TextView
        android:text="@string/CharacterCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CharacterCount"
        android:textColor="@color/fontColor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ClaimImage"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:layout_weight="0.17" />

</LinearLayout>
