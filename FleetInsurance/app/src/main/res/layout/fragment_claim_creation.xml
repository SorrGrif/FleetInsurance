<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="faucher.paul.fleetinsurance.ClaimCreator"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1"
    android:paddingTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Title"
            android:textColor="@color/titleFontColor"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="normal|bold"/>

        <EditText
            android:id="@+id/TitleValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/TextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FirstNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/FirstName"
                android:textColor="@color/titleFontColor"
                android:textSize="@dimen/TitleTextSize"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/FirstNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:text="@string/PlaceHolder"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/TextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LastNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/LastName"
                android:textColor="@color/titleFontColor"
                android:textSize="@dimen/TitleTextSize"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/LastNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:text="@string/PlaceHolder"
                android:textColor="@color/fontColor"
                android:textSize="@dimen/TextSize" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Time"
                android:textColor="@color/titleFontColor"
                android:textSize="@dimen/TitleTextSize"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/TimeValue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditTextHeight"
                android:hint="@string/SelectTimeHint"
                android:text="@string/PlaceHolder"
                android:textColor="@color/placeholderFontColor"
                android:textSize="@dimen/TextSize" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ClockButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonImageHeight"
            android:layout_gravity="bottom"
            android:layout_weight="10"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/ic_alarm_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Date"
                android:textColor="@color/titleFontColor"
                android:textSize="@dimen/TitleTextSize"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/DateValue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditTextHeight"
                android:hint="@string/SelectDateHint"
                android:text="@string/PlaceHolder"
                android:textColor="@color/placeholderFontColor"
                android:textSize="@dimen/TextSize" />

        </LinearLayout>

        <ImageView
            android:id="@+id/CalendarButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonImageHeight"
            android:layout_gravity="bottom"
            android:layout_weight="10"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/ic_insert_invitation_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DescriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Description"
            android:textColor="@color/titleFontColor"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/DescriptionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLength="255"
            android:paddingBottom="10dp"
            android:textSize="@dimen/TextSize" />

        <TextView
            android:id="@+id/CharacterCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CharacterCount"
            android:textColor="@color/fontColor" />
    </LinearLayout>

    <ImageView
        android:id="@+id/CameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
